package controlador

import (
	"fmt"
	"os"

	"gorm.io/driver/sqlserver"
	"gorm.io/gorm"
)

func Connect() (*gorm.DB, error) {

	var host string = os.Getenv("Host_sqlserver")
	var port string = os.Getenv("Port_sqlserver")
	var database string = os.Getenv("Database_sqlserver")
	var user string = os.Getenv("User_sqlserver")
	var password string = os.Getenv("Password_sqlserver")
	var dsn string = fmt.Sprint("server=%s;user id=%s;password=%s;port=%d;database=%s;",
		host, user, password, port, database)
	fmt.Println(host, port, database, user, password, dsn)
	db, err := gorm.Open(sqlserver.Open(dsn), &gorm.Config{})
	return db, err
}
